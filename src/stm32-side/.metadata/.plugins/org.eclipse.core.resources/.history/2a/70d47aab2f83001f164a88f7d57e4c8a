static inline void startUp() {
	startDisplay();
	static const int motors[] = {0, 1, -1};
	turnMotorsOff(motors);
}

static inline void rotateList(){
	diskState[2] = diskState[1];
	diskState[1] = diskState[0];
	diskState[0] = 0;
}

